<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:HomePage="clr-namespace:RangeApp"
             xmlns:viewmodel="clr-namespace:RangeApp.ViewModel"
             x:DataType="viewmodel:HomePageViewModel"
             x:Class="RangeApp.Views.HomePage">
    <VerticalStackLayout>
        <Label Padding="0,0,0,20"
               Text="Welcome To The Range Day App"
               FontSize="32"/>
        <Button Text="Round Builder"
                Clicked="RoundBuilderClicked"/>
        <Button Text="Continue Session"
                x:Name="ContinueSessionButton"
                VerticalOptions="End"
                Clicked="ContinueSessionClicked"/>
    </VerticalStackLayout>

</ContentPage>
